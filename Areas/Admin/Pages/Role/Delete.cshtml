@page "/admin/delete-role/{roleId}" 
@model RazorEF.Areas.Admin.Pages.Role.DeleteModel
@{
  ViewData["Title"] = "Delete role";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Are you sure to delete <strong>@Model.Role.Name</strong> role?</p>
            <button type="submit" class="btn btn-danger ">Delete</button>
            <a class="btn btn-primary" asp-page="./Index">Roles list</a>
        </form>
    </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
